\item  select od$\_$cluster$\_$charge $>$ 0
\item \textcolor{brown}{brown} Lines in left plot is the accidental background 
\item the plots on the right has subtracted the accidental background 
\item the peak around 20PE comes from $\alpha$(1775keV) only channel (\textcolor{red}{peak 1})
\item the peak around 250PE comes from $\alpha$(1471keV)+$\gamma$(478keV) channel (\textcolor{green}{peak 2})
\item the branch ratio of \textcolor{red}{peak 1} to total increases to \textcolor{red}{29.6$\%$}, which is 6.4$\%$ Initially 
\end{itemize}
\end{frame}

\begin{frame}{First Cluster After Prompt}
\begin{figure}
%\includegraphics[height= 4cm, width=\textwidth]{nv_neutron_after_small_ene_subtracted_Jan26PM.png}
\includegraphics[height= 4cm, width=\textwidth]{nv_neutron_first_small_ene_subtracted_Jan26PM.png}
\end{figure}
\begin{itemize}
\setbeamertemplate{itemize items}[bullet]
\item trigger on neutron in TPC
\item skip in 0 $<$od$\_$cluster$\_$dtprompt $<$ 20us, which od$\_$cluster$\_$charge $>$ 500PE
\item  select od$\_$cluster$\_$charge $>$ 0
\item the first cluster after 20us
\item \textcolor{brown}{brown} Lines in left plot is the accidental background 
\item the plots on the right has subtracted the accidental background 
\item the branch ratio of \textcolor{red}{peak 1} to total becomes to \textcolor{red}{7.76$\%$},which sort of matches with 6.4$\%$
%\item the peak around 20PE comes from $\alpha$(1775keV) only channel (\textcolor{red}{peak 1})
%\item the peak around 250PE comes from $\alpha$(1471keV)+$\gamma$(478keV) channel (\textcolor{green}{peak 2})
%\item the branch ratio of \textcolor{red}{peak 1} to total increases to \textcolor{red}{9.3$\%$}, which is 6.4$\%$ Initially 
\end{itemize}
\end{frame}

